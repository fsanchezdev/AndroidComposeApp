{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "baseBranches": [
    "main",
    "feature/update-renovate.json"
  ],
  "automerge": false,
  "platformAutomerge": false,
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "dependenciesMinorPatchAndDigestUpdates",
      "groupSlug": "dependencies-minor-patch-digest-updates"
    }
  ],
  "separateMajorMinor": false
}
