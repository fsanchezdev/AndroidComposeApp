{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "baseBranches": [
    "main"
  ],
  "automerge": false,
  "platformAutomerge": false,
  "automergeStrategy": "merge-commit",
  "packageRules": [
    {
      "matchFileNames": [".github/workflows/*.yml", ".github/workflows/*.yaml", "^check.yml"],
      "branchPrefix": "workflow-updates/"
    },
    {
      "excludePackagePatterns": ["^.github/workflows/.*$"],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "groupName": "dependencies-minor-patch-digest-updates",
      "groupSlug": "dependencies-minor-patch-digest-updates"
    }
  ],
  "semanticCommitScope": "{{parentDir}}",
  "separateMajorMinor": true
}
