{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "baseBranches": [
    "main"
  ],
  "schedule": [
    "before 4am on Monday"
  ],
  "automergeStrategy": "merge-commit",
  "packageRules": [
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchFileNames": ["check.yml"]
    },
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchPackagePatterns": [
        "^com.android.tools.build",
        "^com.android.application",
        "^com.android.library"
      ],
      "groupName": "android-gradle-plugin",
      "commitMessagePrefix": "AGP",
      "commitMessageExtra": "from {{currentVersion}} to {{newVersion}}"
    },
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchPackagePatterns" : [
        "^org.jetbrains.kotlin",
        "^com.google.devtools.ksp",
        "^androidx.compose.compiler"
      ],
      "groupName" : "kotlin related dependencies"
    },
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "excludePackagePatterns": ["^actions/","^com.android.tools.build", "^com.android.application","^com.android.library",
        "^org.jetbrains.kotlin", "^com.google.devtools.ksp", "^androidx.compose.compiler"],
      "groupName": "dependencies-minor-patch-digest"
    }
  ],
  "assignees": ["fsanchezdev"],
  "semanticCommitScope": "{{parentDir}}",
  "separateMajorMinor": true
}
