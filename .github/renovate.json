{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "baseBranches": [
    "main"
  ],
  "schedule": [
    "before 4am on Monday"
  ],
  "automerge": true,
  "platformAutomerge": true,
  "automergeStrategy": "merge-commit",
  "packageRules": [
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchFileNames": [".github/workflows/check.yml"],
      "groupName": "workflow-updates"
    },
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchPackageNames": [
        "^com.android.tools.build"],
      "groupName": "android-gradle-plugin",
      "commitMessagePrefix": "AGP",
      "commitMessageTopic": "{{dependency}}",
      "commitMessageExtra": "from {{{currentVersion}}} to {{{prettyNewVersion}}}"
    },
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchPackagePatterns" : [
        "^org.jetbrains.kotlin",
        "^com.google.devtools.ksp",
        "^androidx.compose.compiler"
      ],
      "groupName" : "kotlin-related",
      "commitMessagePrefix": "kotlin related dependencies",
      "commitMessageTopic": "{{{dependency}}}",
      "commitMessageExtra": "from {{{currentVersion}}} to {{{prettyNewVersion}}}"
    },
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "excludePackagePatterns": ["^com.android.tools.build", "^com.android.application","^com.android.library",
        "^org.jetbrains.kotlin", "^com.google.devtools.ksp", "^androidx.compose.compiler"],
      "groupName": "dependencies-minor-patch-digest"
    }
  ],
  "semanticCommitScope": "{{parentDir}}",
  "separateMajorMinor": true
}
