{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "baseBranches": [
    "main",
    "temp"
  ],
  "automergeStrategy": "merge-commit",
  "schedule": [
    "before 4am on Monday"
  ],
  "packageRules": [
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchFileNames": [".github/workflows/check.yml"],
      "groupName": "workflow-updates"
    },
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchPackageNames": ["com.android.tools.build:gradle", "com.android.application","com.android.library"],
      "groupName": "android-gradle-plugin",
      "commitMessageTopic": "{{dependency}}",
      "commitMessageExtra": "to {{newVersion}}",
      "commitMessagePrefix": "update AGP"
    },
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "excludePackageNames": ["com.android.tools.build:gradle", "com.android.application","com.android.library"],
      "groupName": "dependencies-minor-patch-digest"
    }
  ],
  "assignees": ["fsanchezdev"],
  "semanticCommitScope": "{{parentDir}}",
  "separateMajorMinor": true
}
