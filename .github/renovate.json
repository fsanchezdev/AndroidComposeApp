{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices"
  ],
  "baseBranches": [
    "main"
  ],
  "automergeStrategy": "merge-commit",
  "schedule": [
    "before 4am on Monday"
  ],
  "packageRules": [
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchFileNames": [".github/workflows/check.yml"],
      "groupName": "workflow-updates"
    },
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchPackageNames": ["com.android.tools.build:gradle", "com.android.application","com.android.library"],
      "groupName": "android-gradle-plugin",
      "commitMessagePrefix": "AGP",
      "commitMessageTopic": "{{dependency}}",
      "commitMessageExtra": "from {{currentVersion}} to {{newVersion}}"
    },
    {
      "matchPackagePatterns" : [
        "androidx.compose.compiler"
      ],
      "groupName" : "compose-compiler",
      "commitMessagePrefix": "compose-compiler",
      "commitMessageTopic": "{{dependency}}",
      "commitMessageExtra": "from {{currentVersion}} to {{newVersion}}"
    },
    {
      "matchPackagePatterns" : [
        "org.jetbrains.kotlin",
        "com.google.devtools.ksp",
        "androidx.compose.compiler"
      ],
      "groupName" : "kotlin",
      "commitMessagePrefix": "Kotlin",
      "commitMessageTopic": "{{dependency}}",
      "commitMessageExtra": "from {{currentVersion}} to {{newVersion}}"
    },
    {
      "automerge": false,
      "platformAutomerge": false,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "excludePackageNames": ["com.android.tools.build:gradle", "com.android.application","com.android.library",
        "org.jetbrains.kotlin", "com.google.devtools.ksp", "androidx.compose.compiler"],
      "groupName": "dependencies-minor-patch-digest"
    }
  ],
  "assignees": ["fsanchezdev"],
  "semanticCommitScope": "{{parentDir}}",
  "separateMajorMinor": true
}
